generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum food_category {
  DRINK
  APPETIZER
  ENTREE
  DESSERT
}

enum items {
  FAJITA
  GRILLED_CHEESE
  GRILLED_VEGETABLES
  BURRITO
  TACO
  QUESADILLA
  PALAK_PANEER
  NACHOS
  CHIPS_AND_SALSA
  GUACAMOLE
  QUESO
}

model menu_item {
  id          Int           @id @default(autoincrement())
  name        items         @unique
  price       Float
  description String
  category    food_category
  order       order?        @relation(fields: [orderId], references: [id])
  orderId     Int?
}

model order {
  id          Int         @id @default(autoincrement())
  items       menu_item[]
  total_price Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
